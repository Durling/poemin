<%- include ../global/header.ejs %>
<%- include ../global/top.ejs %>
<style>
.home-info{
    width: 100%;
    margin-top: 1.5rem;
    background: white;
}	
.eidt-user-info-div .home-info{
    margin-top: 0rem;
    border-bottom: solid 1px rgba(227, 227, 227, 0.5);
}
.home-info-0{
    padding: 1rem;
    height: 8rem;
}
.home-info-1{
    padding: 1rem;
    height: 5rem;
}
.home-info img{
	height: 100%;
}
.home-info ul{
    margin: 0;
    padding: 0;
    font-size: 1.6rem;
}
.home-info-0 ul{
    height: 6rem;
}
.home-info-1 ul{
    height: 3rem;
}
.home-info p{
    margin: 0;
    padding: 0;
    height: 100%;
}
.home-info li{
    height: 100%;
    line-height: 100%;
    vertical-align: middle;
}

.home-info li.user-name {
    padding: 1rem 0;
}
.home-info li.user-name p{
    height: 2rem;
    line-height: 2rem;
}

.home-info .grey {
    font-size: 1.5rem;
    color: #909090!important;
    font-weight: lighter;
}
.home-info li.left-title {
    padding: 0.8rem 0;
    margin-left: 0.8rem;
}
.home-info-0 li.left-title {
    padding: 2.3rem 0!important;
}
.home-info li.right-value {
	float: right;
    padding: 0.8rem 0;
    margin-right: 0.8rem;
}

.eidt-user-info-div {
	position: fixed;
    width: 100%;
    height: 100%;
    overflow-y:scroll; 
    background: #f6f6f1;
    top: 0;
    z-index: 1;
}
.eidt-user-info-h {
    height: 5rem;
    line-height: 5rem;
    background: #ffffff;
    padding: 0 1.5rem;
    font-size: 1.6rem;
    border-bottom: solid 1px #d9d9d9;
}
.eidt-user-info-div span.badge {
    font-weight: lighter;
    font-size: 1.2rem;
    background: white;
    color: #dedede;
    border: solid 1px #dedede;
}
.eidt-user-info-div span.badge.ok{
	color: #03A9F4;
    border: solid 1px #03A9F4;
}
.eidt-user-info-h .back-btn{
    float: left;
    position: absolute;
    left: 0;
    padding: 0 1.5rem;
}

</style>
<link rel="stylesheet" href="css/user/login.css">


<div class="eidt-user-info-div hide">
	<div class="eidt-user-info-h text-center">
		<span class="back-btn" onclick="hide_eidt_user_info(this)">
			<i class="icon icon-angle-left"></i>
			<span>返回</span>
		</span>
		<span>个人信息</span>
	</div>
	<br>
	<div class="home-info home-info-0">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span>头像</span>
			</li>
			<li style="float:right;">
				<img src="<%-qiniuDoname%><%-rs.avatar%>?imageView2/2/w/100/h/100" alt="">
			</li>
		</ul>
	</div>
	<br>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">用户名</span>
			</li>
			<li class="right-value">
				<span><%-rs.userName%></span>
				<%if(rs.grade>=3){%>
					<span class="badge ok">管理员</span>
				<%}else{%>
					<span class="badge"></span>
				<%}%>
			</li>
		</ul>
	</div>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">印象号</span>
			</li>
			<li class="right-value">
				<span><%-rs.in_unique_code%></span>
			</li>
		</ul>
	</div>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">邮箱</span>
			</li>
			<li class="right-value">
				<span><%-rs.email%></span>
				<%if(rs.email_status==1){%>
					<span class="badge ok">已验证</span>
				<%}else{%>
					<span class="badge">未验证</span>
				<%}%>
			</li>
		</ul>
	</div>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">手机号</span>
			</li>
			<li class="right-value">
				<span><%-rs.phone%></span>
				<%if(rs.phone_status==1){%>
					<span class="badge ok">已验证</span>
				<%}else{%>
					<span class="badge">未验证</span>
				<%}%>
			</li>
		</ul>
	</div>
	<br>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">笔名</span>
			</li>
			<li class="right-value">
				<span><%-rs.penName%></span>
			</li>
		</ul>
	</div>
	<%if(rs.type>0){%>
		<div class="home-info home-info-1">
			<ul class="list-unstyled list-inline">
				<li class="left-title">
					<span style="color:#000000!important;">认证信息</span>
				</li>
				<li class="right-value">
					<%if(rs.type==3){%>
						<span class="badge ok">古代著名诗人</span>
					<%}else if(rs.type==2){%>
						<span class="badge ok">近代著名诗人</span>
					<%}else if(rs.type==1){%>
						<span class="badge ok">当今著名诗人</span>
					<%}else{%>
						<span class="badge ok"></span>
					<%}%>
				</li>
			</ul>
		</div>
	<%}%>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">性别</span>
			</li>
			<li class="right-value">
				<%if(rs.sex==0){%>
					<span>女</span>
				<%}else if(rs.sex==1){%>
					<span>男</span>
				<%}%>
			</li>
		</ul>
	</div>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">所在城市</span>
			</li>
			<li class="right-value">
				<span><%-rs.city%></span>
			</li>
		</ul>
	</div>
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">个性签名</span>
			</li>
			<li class="right-value">
				<span><%-rs.signature%></span>
			</li>
		</ul>
	</div>
	<br>
	<div class="home-info home-info-1" onclick="logout()">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#000000!important;">注销当前登录</span>
			</li>
		</ul>
	</div>
	<br>
	<br>
	<br>

	<div class="hide">
		<p class="p-email">
			<input type="text" class="my-email" value="878877528@qq.com">
			<span class="btn btn-info btn-xs" onclick="sendEmailCode(this)">发送验证码</span>
			<input type="text" id="my-email-code" value="" placeholder="验证码">
			<span class="btn btn-info btn-xs" onclick="verifyEmailCode(this)">验证</span>
		</p>
	</div>



</div>

<div class="container">

	<div class="home-info home-info-0" onclick="show_eidt_user_info()">
		<ul class="list-unstyled list-inline">
			<li>
				<img src="<%-qiniuDoname%><%-rs.avatar%>?imageView2/2/w/100/h/100" alt="">
			</li>
			<li class="user-name">
				<p>
					<strong><%-rs.userName%></strong>
					&nbsp;
					<!-- <small class="grey"><i class="icon icon-pencil"></i></small> -->
				</p>
				<p class="grey">
					<span>印象号:</span>
					<span><%-rs.in_unique_code%></span>
				</p>
			</li>
			<li class="grey" style="float:right;font-size:1.8rem;padding:2.22rem 1rem;">
				<p>
					<span><i class="icon icon-qrcode"></i></span>
				</p>
			</li>
		</ul>
	</div>

	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#03A9F4;"><i class="icon icon-magic"></i></span>
				&nbsp;
				<span style="color:#000000!important;">我写的诗</span>
			</li>
		</ul>
	</div>

	<a href="moments">
	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#03A9F4;"><i class="icon icon-coffee"></i></span>
				&nbsp;
				<span style="color:#000000!important;">诗友圈</span>
			</li>
		</ul>
	</div>
	</a>

	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#03A9F4;"><i class="icon icon-leaf"></i></span>
				&nbsp;
				<span style="color:#000000!important;">诗笔迹</span>
			</li>
		</ul>
	</div>

	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#03A9F4;"><i class="icon icon-heart"></i></span>
				&nbsp;
				<span style="color:#000000!important;">我喜欢的诗</span>
			</li>
		</ul>
	</div>

	<div class="home-info home-info-1">
		<ul class="list-unstyled list-inline">
			<li class="left-title">
				<span style="color:#03A9F4;"><i class="icon icon-book"></i></span>
				&nbsp;
				<span style="color:#000000!important;">我收藏的诗集</span>
			</li>
		</ul>
	</div>



</div>

<script>
	console.log(<%-JSON.stringify(qiniuDoname)%>);
	console.log(<%-JSON.stringify(rs)%>);
</script>

