<style>
.nav-common{
	display: none;
}
.avatar-info {
    height: 20rem;
    display: -webkit-box;
}
.home-avatar{
    width: 8rem;
    height: 8rem;
    border-radius: 2px;
    border: solid 2px #f6f6f1;
    position: absolute;
    margin-left: -10rem;
    top: 15rem;
}
.home-userName{
    position: absolute;
    margin-left: -17rem;
    font-size: 1.8rem;
    top: 17rem;
    color: white;
    text-shadow: 0 1px 1px black;
}

.blur {    
	filter: url(blur.svg#blur); /* FireFox, Chrome, Opera */
    -webkit-filter: blur(30px); /* Chrome, Opera */
       -moz-filter: blur(30px);
         -o-filter: blur(30px);
        -ms-filter: blur(30px);    
            filter: blur(30px);  
			filter: progid:DXImageTransform.Microsoft.Blur(PixelRadius=10, MakeShadow=false); /* IE6~IE9 */  
}
.right-top-camera {
    position: absolute;
    top: 2rem;
    font-size: 2.0rem;
    margin-left: -4.5rem;
    color: white;
    text-shadow: 0px 0px 5px #666666;
    opacity: .8;
}
.left-bottom-friends{
    position: absolute;
    top: 16.5rem;
    font-size: 2.0rem;
    margin-left: 1.5rem;
    color: white;
    text-shadow: 0px 0px 5px #666666;
    opacity: .8;
    display: table;
}
.rotate{
    -moz-animation:rotate .5s infinite linear;
    -webkit-animation:rotate .5s infinite linear;
    animation:rotate .5s infinite linear;
}
  @-moz-keyframes rotate{
    0%{
      -moz-transform:rotate(0deg);
     }
     100%{
       -moz-transform:rotate(360deg);
     }
  }
  @-webkit-keyframes rotate{
    0%{
      -webkit-transform:rotate(0deg);
     }
     100%{
       -webkit-transform:rotate(360deg);
     }
  }
  @keyframes rotate{
    0%{
      transform:rotate(0deg);
     }
     100%{
       transform:rotate(360deg);
     }
  }

.new-moments-div {
    width: 100%;
    height: 100%;
    position: fixed;
    background: #ffffff;
    top: 0;
    max-width: 500px;
    margin: 0 auto;
}
.moments-content {
    border: none;
    border-bottom: solid 1px #d4d4d4;
    resize: none;
    height: 200px;
    overflow-y: scroll;
    border-radius: 0;
    font-size: 1.6rem;
    padding: 1.5rem;
}
.add-img-btn{
    display: inline-block;
	width: 6rem;
    height: 6rem;
    border: solid 1px #d4d4d4;
    text-align: center;
    font-size: 6rem;
    font-weight: lighter;
    color: #d4d4d4;
    vertical-align: middle;
    line-height: 4.8rem;
}
.add-img-p{
    margin-left: 1.5rem;
    margin-right: 0.5rem;
    margin-top: -8rem;
    z-index: 1;
    position: absolute;
    background: white;
}


</style>
<link rel="stylesheet" href="">

<div class="container">

	<template v-for="el in user_info">
		<div class="col-lg-12 avatar-info" v-bind:style="'padding:0;background-image: url('+qiniuDoname+el.avatar+'?imageView2/2/w/500);background-repeat: no-repeat;background-size: cover;background-position: center;'"></div>
		<p class="text-right" style="width:100%;">
			<span class="home-userName">{{el.userName}}</span>
			<img class="home-avatar" v-bind:src="qiniuDoname+el.avatar+'?imageView2/1/w/100/h/100'" alt="">
		</p>
		<p class="text-right">
			<span onclick="show_new_moments()" class="right-top-camera"><i class="icon icon-camera"></i></span>
		</p>
		<p class="text-left hide">
			<span class="left-bottom-friends"><i class="icon icon-fire"></i></span>
		</p>

	</template>

	<div class="new-moments-div hide">
		<textarea class="moments-content" cols="30" rows="10" placeholder="这一刻的诗想..." style="width:100%"></textarea>
		<p class="add-img-p">
			<span class="add-img-btn">+</span>
		</p>
